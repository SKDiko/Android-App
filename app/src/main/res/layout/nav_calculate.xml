<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="#f2f2f2"
    android:padding="5dp">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Home Language"
                app:backgroundTint="@color/white"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:maxLength="2"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="First Additional Language"
                android:inputType="number"
                android:maxLength="2"
                android:layout_marginLeft="10dp"
                app:backgroundTint="@color/white"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Mathematics / Mathematical Literacy"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:maxLength="2"
                app:backgroundTint="@color/white"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Life Orientation"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                app:backgroundTint="@color/white"
                android:maxLength="2"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="1st Optional Subject"
                app:backgroundTint="@color/white"
                android:inputType="number"
                android:layout_marginLeft="10dp"
                android:maxLength="2"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/white"
                android:layout_marginLeft="10dp"
                android:hint="2nd Optional Subject"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="18dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                app:cardCornerRadius="0dp"
                android:layout_marginTop="2.5dp"
                android:layout_marginBottom="2.5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                app:cardElevation="5dp">
            <EditText
                android:id="@+id/txtSubject7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="3rd Optional Subject"
                android:layout_marginLeft="10dp"
                app:backgroundTint="@color/white"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="18dp"
                />
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/btnCalculate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="16dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Calculate"
                />
            <Button
                android:id="@+id/btnClear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:textSize="16dp"
                android:text="Clear" />
            <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:translationZ="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_marginRight="100dp"
                android:layout_marginLeft="100dp">
            <TextView
                android:id="@+id/txtPoints"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="18dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Total Points: 0" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>